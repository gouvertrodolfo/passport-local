<div class="container">
    <h1>Centro de mensajes</h1>

    <form onsubmit="return addMessage(this)">

        <div class="input-group input-group-sm mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-sm">Correo: </span>
            </div>
            <input type="email" id="correo" class="form-control" aria-label="Small"
                aria-describedby="inputGroup-sizing-sm" placeholder="Your Email" value= <%= user.email %> readonly>
        </div>

        <div class="input-group input-group-sm mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-sm">Nombre: </span>
            </div>
            <input type="text" id="nombre" class="form-control" aria-label="Small"
                aria-describedby="inputGroup-sizing-sm" placeholder="Nombre" value= <%= user.firstName %> readonly>
        </div>


        <div class="input-group input-group-sm mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-sm">Apellido: </span>
            </div>
            <input type="text" id="apellido" class="form-control" aria-label="Small"
                aria-describedby="inputGroup-sizing-sm" placeholder="Apellido" value= <%= user.lastName %> readonly>
        </div>

        <div class="input-group input-group-sm mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-sm">Edad: </span>
            </div>
            <input type="number" id="edad" class="form-control" aria-label="Small"
                aria-describedby="inputGroup-sizing-sm" placeholder="edad" value= <%= user.edad %> readonly> 
        </div>

        <div class="input-group input-group-sm mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-sm">Alias: </span>
            </div>
            <input type="text" id="alias" class="form-control" aria-label="Small"
                aria-describedby="inputGroup-sizing-sm" placeholder="alias" value= <%= user.username %> readonly>
        </div>

        <div class="form-group" id='messages'></div>

        <div class="input-group input-group-sm mb-3">

            <input type="text" id="texto" class="form-control" ria-label="msj:" aria-describedby="inputGroup-sizing-sm"
                placeholder="Ingresa un mensaje..." required>
        </div>

        <div class="form-group">
            <input type="submit" value="Enviar" class="btn btn-success">
        </div>

    </form>

</div>